{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Run Backend (Jakarta EE)",
            "type": "shell",
            "command": "mvn clean package cargo:run",
            "isBackground": true,
            "problemMatcher": [
                {
                    "pattern": [
                        {
                            "regexp": ".",
                            "file": 1,
                            "location": 2,
                            "message": 3
                        }
                    ],
                    "background": {
                        "activeOnStart": true,
                        "beginsPattern": "Scanning for projects...",
                        "endsPattern": "Tomcat.*started on port"
                    }
                }
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "reveal": "always",
                "panel": "new"
            }
        }
    ]
}